/* Mutating Methods */

struct Odometer {
    var count : Int  = 0
    mutating func increment() {
        count += 1
    }
    mutating func increment(by amount: Int){
        count += amount
    }
    mutating func reset (){
        count = 0
    }
}

var odometer = Odometer()
odometer.increment()
print(odometer.count)    // 1
odometer.increment(by: 15)
print(odometer.count)   // 16
odometer.reset()
print(odometer.count)   // 0
*/

